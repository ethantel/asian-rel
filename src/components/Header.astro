---
const navItems = [
  { name: 'Overview', url: '/asian-rel/#overview' },
  { name: 'History', url: '/asian-rel/history' },
  { name: 'Rituals', url: '/asian-rel/rituals' },
  { name: 'Eightfold Path', url: '/asian-rel/eightfold-path' },
  { name: 'Liberation', url: '/asian-rel/liberation' },
  { name: 'Non-Harm', url: '/asian-rel/non-harm' },
];
---

<header
  id="site-header"
  class="fixed top-0 left-0 w-full z-50 transition-all duration-300"
>
  <div class="container mx-auto px-4">
    <nav class="flex items-center justify-between py-4">
      <a href="/asian-rel/" class="text-primary font-serif font-medium flex items-center gap-2">
        <span class="w-8 h-8">
          <img src="/asian-rel/images/lotus-icon.svg" alt="Lotus Icon" />
        </span>
        <span class="hidden sm:inline text-2xl">The Pathway to Buddhism</span>
      </a>

      <!-- Mobile Menu Button -->
      <button id="menu-toggle" class="lg:hidden text-neutral-800 focus:outline-none">
        <span class="sr-only">Menu</span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-6 h-6"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
          />
        </svg>
      </button>

      <!-- Desktop Menu -->
      <div class="hidden lg:flex items-center gap-6">
        {
          navItems.map((item) => (
            <a
              href={item.url}
              class="text-neutral-500 hover:text-primary transition-colors font-medium text-sm"
            >
              {item.name}
            </a>
          ))
        }
        <a
          href="/asian-rel/#explore"
          class="bg-primary hover:bg-gold text-white py-2 px-4 rounded-md transition-colors text-sm font-medium"
        >
          Begin Your Journey
        </a>
      </div>

      <!-- Mobile Menu (Hidden by default) -->
      <div
        id="mobile-menu"
        class="fixed inset-0 bg-neutral-50 z-50 transform translate-x-full transition-transform duration-300 ease-in-out lg:hidden"
      >
        <div class="flex justify-between items-center p-4 border-b border-neutral-200">
          <a href="/asian-rel/" class="text-primary text-xl font-serif">The Pathway to Buddhism</a>
          <button id="close-menu" class="text-neutral-800 focus:outline-none">
            <span class="sr-only">Close Menu</span>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="w-6 h-6"
            >
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
        <div class="p-4 flex flex-col gap-4">
          {
            navItems.map((item) => (
              <a
                href={item.url}
                class="text-neutral-500 hover:text-primary transition-colors py-2 border-b border-neutral-100"
              >
                {item.name}
              </a>
            ))
          }
          <a
            href="/asian-rel/#explore"
            class="bg-primary hover:bg-gold text-white py-3 px-4 rounded-md transition-colors text-center mt-4"
          >
            Begin Your Journey
          </a>
        </div>
      </div>
    </nav>
  </div>
</header>

<script>
  // Handle header background on scroll
  const header = document.getElementById('site-header');
  const handleScroll = () => {
    if (window.scrollY > 50) {
      header?.classList.add('bg-neutral-50', 'shadow-md');
      header?.classList.remove('bg-transparent');
    } else {
      header?.classList.remove('bg-neutral-50', 'shadow-md');
      header?.classList.add('bg-transparent');
    }
  };

  // Set initial state
  handleScroll();
  window.addEventListener('scroll', handleScroll);

  // Mobile menu functionality
  const menuToggle = document.getElementById('menu-toggle');
  const closeMenu = document.getElementById('close-menu');
  const mobileMenu = document.getElementById('mobile-menu');
  const mobileMenuLinks = mobileMenu?.querySelectorAll('a');

  menuToggle?.addEventListener('click', () => {
    mobileMenu?.classList.remove('translate-x-full');
    mobileMenu?.classList.add('translate-x-0');
    document.body.style.overflow = 'hidden';
  });

  closeMenu?.addEventListener('click', () => {
    mobileMenu?.classList.remove('translate-x-0');
    mobileMenu?.classList.add('translate-x-full');
    document.body.style.overflow = '';
  });

  mobileMenuLinks?.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.remove('translate-x-0');
      mobileMenu?.classList.add('translate-x-full');
      document.body.style.overflow = '';
    });
  });
</script>