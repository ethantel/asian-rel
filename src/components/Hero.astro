---
interface Props {
  title: string;
  subtitle: string;
  ctaText?: string;
  ctaLink?: string;
  bgImage?: string;
  overlayOpacity?: string;
  showCTA?: boolean;
}

const {
  title,
  subtitle,
  ctaText = "Begin Your Journey",
  ctaLink = "#overview",
  bgImage = "/asian-rel/images/hero-bg.png",
  overlayOpacity = "opacity-50",
  showCTA = false,
} = Astro.props;
---

<section
  class="relative h-screen flex items-center justify-center text-white overflow-hidden"
  style={`background-image: url(${bgImage}); background-size: cover; background-position: center;`}
>
  <!-- Overlay -->
  <div class={`absolute inset-0 bg-black ${overlayOpacity}`}></div>

  <!-- Content -->
  <div class="relative z-10 text-center max-w-5xl px-4">
    <h1
      class="text-4xl md:text-6xl lg:text-7xl font-serif mb-6"
      data-aos="fade-up"
      data-aos-delay="100"
    >
      {title}
    </h1>
    <p
      class="text-lg md:text-xl mb-8 max-w-3xl mx-auto text-neutral-100"
      data-aos="fade-up"
      data-aos-delay="200"
    >
      {subtitle}
    </p>
    {
      showCTA && ctaText && (
        <a
          href={ctaLink}
          class="inline-block bg-primary-600 hover:bg-primary-700 text-white font-medium px-8 py-3 rounded-md transition-colors text-lg"
          data-aos="fade-up"
          data-aos-delay="300"
        >
          {ctaText}
        </a>
      )
    }
  </div>

  <!-- Scroll indicator -->
  <div
    class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="currentColor"
      class="w-8 h-8"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M19.5 13.5L12 21m0 0l-7.5-7.5M12 21V3"></path>
    </svg>
  </div>
</section>
