---
import '@fontsource/eb-garamond';
import '@fontsource/inter';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import 'aos/dist/aos.css';

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'The Pathway to Buddhism', 
  description = 'Explore the Four Noble Truths, Eightfold Path, and Daily Practice of Buddhism'
} = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/asian-rel/images/lotus-icon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
    <!-- Initialize AOS -->
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        // @ts-ignore
        AOS.init({
          duration: 800,
          easing: 'ease-in-out',
          once: true
        });
      });
    </script>
  </head>
  <body class="bg-neutral-50 text-neutral-800 font-sans">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
    
    <!-- Load AOS JS at the end of body -->
    <script is:inline src="https://unpkg.com/aos@next/dist/aos.js"></script>
  </body>
</html>

<style is:global>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    scroll-behavior: smooth;
  }
  
  h1, h2, h3, h4, h5, h6 {
    font-family: 'EB Garamond', Georgia, serif;
    line-height: 1.2;
    color: #E08E0B;
  }
  
  p, a, span, li, button, input {
    font-family: 'Inter', sans-serif;
    line-height: 1.5;
  }
  
  .section-padding {
    padding: 6rem 1rem;
  }
  
  @media (max-width: 768px) {
    .section-padding {
      padding: 4rem 1rem;
    }
  }
</style>