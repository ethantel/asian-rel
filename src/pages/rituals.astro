];

// Gallery images
const architectureImages = [
  {
    title: "Stupa",
    description:
      "A stupa is a monument with the purpose to symbolically show practitioners the path to liberation and enlightenment, giving them the opportunity to make offerings and to help them purify their negativity into merit and wisdom, ultimately creating the atmosphere and space to reach the state of the Buddha.",
    image: "/asian-rel/images/gallery/stupa.jpg",
  },
  {
    title: "Pagoda",
    description: `Derived from the stupa, a pagoda is a structure traditionally symbolizing sacred mountains and used to house relics or the remains of saints and kings.

          As Buddhism grew, Southeast Asian countries adapted pagodas to take on a pyramidal or conical shape (right), while East Asian countries evolved them into tall, tower-like structures (left).`,
    image: "/asian-rel/images/gallery/pagoda.png",
  },
  {
    title: "Bowing & Offerings",
    description: `Bowing is a universal Buddhist practice, showing humility and respect, following the Buddhist emphasis on reducing one’s arrogance and pride.

          Offerings are common amongst practitioners who wish to strengthen their spiritual connection to the Buddha and its teachings.`,
    image: "/asian-rel/images/gallery/bowing.png",
  },
  {
    title: "Lotus Flower",
    description: `A common flower offering and symbol in Buddhism that represents impermanence.

          Blooming above muddy waters untouched, the lotus signifies our potential to rise above suffering and achieve full enlightenment.

          “Just as this flower fades, so my body moves towards destruction.” - Theravada Offering Verse`,
    image: "/asian-rel/images/gallery/lotus.png",
  },
  {
    title: "Incense & Candles",
    description:
      "Integral to Buddhist rituals, lighting incense and candles represents the offering of one’s intentions and prayers, creating a sacred atmosphere of purity, perfect for meditation and reflection.",
    image: "/asian-rel/images/gallery/candles.png",
  },
  {
    title: "The Three Jewels",
    description:
      "The three jewels represent Buddha, Dharma (ultimate way of reality), and Sangha (spiritual community). Taking refuge, or finding guidance, inspiration, and support from the Three Jewels during one’s spiritual journey is a fundamental step in the act of becoming Buddhist.",
    image: "/asian-rel/images/gallery/jewels.png",
  },
];
---

<Layout>
  <Hero
    title="Rituals & Symbols"
    subtitle="Explore the devotional practices, rituals, and symbols that connect practitioners to the teachings of Buddhism."
    bgImage="/asian-rel/images/rituals.jpg"
  />

  <!-- Saddhā Section -->
  <section class="section-padding">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div data-aos="fade-right">
          <h2 class="text-4xl font-serif mb-4">सद्धा</h2>
          <p class="text-4xl text-neutral-600 mb-6">Saddhā</p>

          <ul class="space-y-4">
            <li class="flex items-start gap-3">
              <span class="text-primary-600 text-xl">•</span>
              <p class="text-neutral-700">
                A concept like "faith" or "trustful confidence" in Buddhism,
                saddhā is a movement of the heart towards action
              </p>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-primary-600 text-xl">•</span>
              <p class="text-neutral-700">
                A quality that must be balanced by wisdom, and as a preparation
                or accompaniment of meditation
              </p>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-primary-600 text-xl">•</span>
              <p class="text-neutral-700">
                Given this Buddhist quality, devotion plays an important part in
                the lives of most of its followers
              </p>
            </li>
          </ul>
        </div>
        <div data-aos="fade-left">
          <img
            src="/asian-rel/images/gallery/saddha-concept.png"
            alt="Visual representation of Saddhā"
            class="rounded-lg shadow-lg w-full"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Four Categories Section -->
  <section class="section-padding bg-neutral-100">
    <div class="container mx-auto px-4">
      <SectionHeading
        title="Key Ideas of Buddhist Devotion"
        subtitle="Understanding the four fundamental concepts that shape Buddhist devotional practices"
      />

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div
          class="bg-white p-6 rounded-lg shadow-md border-t-4 border-primary-600"
          data-aos="fade-up"
        >
          <h3 class="text-xl font-serif mb-4 text-primary">
            <i>Adhiṣṭhāna</i> (Spiritual Power)
          </h3>
          <ul class="space-y-3 mb-4 text-neutral-700">
            <li class="flex items-start gap-2">
              <span class="text-primary-600">•</span>
              <span
                >‘Influence or blessing, a kind of power that passes from one
                person to the next like a contagious disease.’</span
              >
            </li>
            <li class="flex items-start gap-2">
              <span class="text-primary-600">•</span>
              <span
                >A blessing that may be conveyed through a short chant, a laying
                of hands, or the passing on of a blessed object to chanting
                monks</span
              >
            </li>
          </ul>
        </div>

        <div
          class="bg-white p-6 rounded-lg shadow-md border-t-4 border-gold-600"
          data-aos="fade-up"
          data-aos-delay="100"
        >
          <h3 class="text-xl font-serif mb-4 text-gold-600">
            <i>Nidāna</i> (Connection to Sacred Beings)
          </h3>
          <ul class="space-y-3 mb-4 text-neutral-700">
            <li class="flex items-start gap-2">
              <span class="text-gold-600">•</span>
              <span
                >A connection or physical proximity that allows adhiṣṭhāna to
                pass from one thing or person to another</span
              >
            </li>
            <li class="flex items-start gap-2">
              <span class="text-gold-600">•</span>
              <span
                >Occurs most commonly when a person makes offerings or shows
                devotion to an image, monument, or other person that is
                connected to the Buddha, with an open heart
              </span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-gold-600">•</span>
              <span
                >Allows devotees to build a spiritual connection to the Buddhas
                power
              </span>
            </li>
          </ul>
        </div>

        <div
          class="bg-white p-6 rounded-lg shadow-md border-t-4 border-jade-600"
          data-aos="fade-up"
          data-aos-delay="200"
        >
          <h3 class="text-xl font-serif mb-4 text-jade-600">
            <i>Puñña</i> (Merit)
          </h3>
          <ul class="space-y-3 mb-4 text-neutral-700">
            <li class="flex items-start gap-2">
              <span class="text-jade-600">•</span>
              <span>“Karmic fruitfulness.”</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-jade-600">•</span>
              <span
                >The positive power or energy of goodness that can be activated
                and directed to whatever goal one may choose</span
              >
            </li>
            <li class="flex items-start gap-2">
              <span class="text-jade-600">•</span>
              <span
                >Most abundant when giving to those who are rich in adhiṣṭhāna
                or out of passion to those in need</span
              >
            </li>
            <li class="flex items-start gap-2">
              <span class="text-jade-600">•</span>
              <div>
                <p class="mb-2">Can be accumulated in three ways:</p>
                <ul class="list-disc ml-6 space-y-1">
                  <li><i>Dāna</i> (generosity)</li>
                  <li><i>Sīla</i> (moral conduct)</li>
                  <li><i>Bhāvanā</i> (meditation and mental development)</li>
                </ul>
              </div>
            </li>
          </ul>
        </div>

        <div
          class="bg-white p-6 rounded-lg shadow-md border-t-4 border-neutral-600"
          data-aos="fade-up"
          data-aos-delay="300"
        >
          <h3 class="text-xl font-serif mb-4 text-neutral-600">
            <i>Praṇidhāna</i> (Vows)
          </h3>
          <ul class="space-y-3 mb-4 text-neutral-700">
            <li class="flex items-start gap-2">
              <span class="text-neutral-600">•</span>
              <span
                >An earnest wish or prayerful vow that carries the power to
                accomplish its positive purpose</span
              >
            </li>
            <li class="flex items-start gap-2">
              <span class="text-neutral-600">•</span>
              <span
                >“Many Buddhist ceremonies and rituals are basically about
                making a connection that will cause <i>adhiṣṭhāna</i> to flow, then
                performing actions that will generate <i>puñña</i> and then dedicating
                the <i>puñña</i> in the form of <i>praṇidhānas</i> for the general
                good as well as for specific purposes.”</span
              >
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Gallery Section -->
  <section id="sites" class="section-padding">
    <div class="container mx-auto px-4">
      <SectionHeading
        title="Sacred Sites & Symbols"
        subtitle="Visual journey through beautiful Buddhist temples, symbols, and sacred spaces"
      />

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          architectureImages.map((item, index) => (
            <div
              class="group relative overflow-hidden rounded-lg aspect-[4/3] bg-neutral-800 cursor-pointer gallery-item"
              data-aos="fade-up"
              data-aos-delay={index * 100}
              data-item={index}
              data-gallery-item
            >
              <img
                src={item.image}
                alt={item.title}
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent flex flex-col justify-end p-6">
                <h3 class="text-white text-xl font-serif mb-2">{item.title}</h3>
                <p class="text-neutral-200 text-sm line-clamp-2">
                  Click to learn more
                </p>
              </div>
            </div>
          ))
        }
      </div>

      <!-- Gallery Modal -->
      <div
        id="gallery-modal"
        class="fixed inset-0 bg-black bg-opacity-70 flex items-center justify-center z-50 hidden p-4"
      >
        <div class="bg-white rounded-lg w-full max-w-5xl overflow-hidden">
          <div class="flex justify-between items-start p-6 pb-2">
            <h3 id="modal-title" class="text-3xl font-serif text-primary-700">
              Element
            </h3>
            <button
              id="close-modal"
              class="text-neutral-500 hover:text-neutral-800"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-6 h-6"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8 p-6 pt-2">
            <div
              class="flex items-center justify-center bg-neutral-100 rounded-lg p-2"
            >
              <img
                id="modal-image"
                src=""
                alt=""
                class="max-w-full max-h-[400px] w-auto h-auto object-contain rounded"
              />
            </div>
            <div class="flex flex-col justify-center">
              <div class="space-y-4">
                <div class="w-16 h-1 bg-primary-600"></div>
                <p
                  id="modal-description"
                  class="text-neutral-700 leading-relaxed text-lg"
                >
                </p>
                <div class="pt-4">
                  <span
                    class="inline-block bg-primary-100 text-primary-800 text-sm px-3 py-1 rounded-full"
                  >
                    Buddhist Architecture & Symbols
                  </span>
                </div>
              </div>
            </div>
          </div>
          <div class="bg-neutral-100 px-6 py-4 flex justify-end">
            <button
              id="modal-close-btn"
              class="bg-primary-600 hover:bg-primary-700 text-white px-6 py-2 rounded-md transition-colors text-sm"
            >
              Close
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Sections Navigation -->
  <section class="py-12 bg-primary-50">
    <div class="container mx-auto px-4">
      <h2 class="text-2xl font-serif text-center mb-8">
        Continue Your Exploration
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <a
          href="/asian-rel/eightfold-path"
          class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow flex items-center"
        >
          <div class="mr-4 text-primary-600">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="w-8 h-8"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M11.25 4.5l7.5 7.5-7.5 7.5m-6-15l7.5 7.5-7.5 7.5"></path>
            </svg>
          </div>
          <div>
            <h3 class="text-lg font-serif">
              The Four Noble Truths & Eightfold Path
            </h3>
            <p class="text-neutral-700 text-sm">
              The core teachings that followed Buddha's enlightenment
            </p>
          </div>
        </a>
        <a
          href="/asian-rel/liberation"
          class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow flex items-center"
        >
          <div class="mr-4 text-primary-600">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="w-8 h-8"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M11.25 4.5l7.5 7.5-7.5 7.5m-6-15l7.5 7.5-7.5 7.5"></path>
            </svg>
          </div>
          <div>
            <h3 class="text-lg font-serif">Pathways to Liberation</h3>
            <p class="text-neutral-700 text-sm">
              Exploring the Five Khandas and concepts of non-self
            </p>
          </div>
        </a>
      </div>
    </div>
  </section>
</Layout>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const galleryItems =
      document.querySelectorAll<HTMLElement>(".gallery-item");
    const modal = document.getElementById("gallery-modal") as HTMLElement;
    const modalTitle = document.getElementById("modal-title") as HTMLElement;
    const modalDescription = document.getElementById(
      "modal-description"
    ) as HTMLElement;
    const modalImage = document.getElementById(
      "modal-image"
    ) as HTMLImageElement;
    const closeModalBtn = document.getElementById(
      "close-modal"
    ) as HTMLButtonElement;
    const modalCloseBtn = document.getElementById(
      "modal-close-btn"
    ) as HTMLButtonElement;

    const architectureImages = [
      {
        title: "Stupa",
        description:
          "A stupa is a monument with the purpose to symbolically show practitioners the path to liberation and enlightenment, giving them the opportunity to make offerings and to help them purify their negativity into merit and wisdom, ultimately creating the atmosphere and space to reach the state of the Buddha.",
        image: "/asian-rel/images/gallery/stupa.jpg",
      },
      {
        title: "Pagoda",
        description: `Derived from the stupa, a pagoda is a structure traditionally symbolizing sacred mountains and used to house relics or the remains of saints and kings.

          As Buddhism grew, Southeast Asian countries adapted pagodas to take on a pyramidal or conical shape (right), while East Asian countries evolved them into tall, tower-like structures (left).`,
        image: "/asian-rel/images/gallery/pagoda.png",
      },
      {
        title: "Bowing & Offerings",
        description: `Bowing is a universal Buddhist practice, showing humility and respect, following the Buddhist emphasis on reducing one’s arrogance and pride.

          Offerings are common amongst practitioners who wish to strengthen their spiritual connection to the Buddha and its teachings.`,
        image: "/asian-rel/images/gallery/bowing.png",
      },
      {
        title: "Lotus Flower",
        description: `A common flower offering and symbol in Buddhism that represents impermanence.

          Blooming above muddy waters untouched, the lotus signifies our potential to rise above suffering and achieve full enlightenment.

          “Just as this flower fades, so my body moves towards destruction.” - Theravada Offering Verse`,
        image: "/asian-rel/images/gallery/lotus.png",
      },
      {
        title: "Incense & Candles",
        description:
          "Integral to Buddhist rituals, lighting incense and candles represents the offering of one’s intentions and prayers, creating a sacred atmosphere of purity, perfect for meditation and reflection.",
        image: "/asian-rel/images/gallery/candles.png",
      },
      {
        title: "The Three Jewels",
        description:
          "The three jewels represent Buddha, Dharma (ultimate way of reality), and Sangha (spiritual community). Taking refuge, or finding guidance, inspiration, and support from the Three Jewels during one’s spiritual journey is a fundamental step in the act of becoming Buddhist.",
        image: "/asian-rel/images/gallery/jewels.png",
      },
    ];

    function openModal(index) {
      const item = architectureImages[index];

      if (item) {
        modalTitle.textContent = item.title;
        //modalDescription.textContent = item.description;
        modalDescription.innerHTML = item.description
          .split("\n\n")
          .map((p) => `<p class="mb-4">${p}</p>`)
          .join("");

        modalImage.src = item.image;
        modalImage.alt = item.title;
        modal.classList.remove("hidden");
        document.body.style.overflow = "hidden";
      }
    }

    function closeModal() {
      modal.classList.add("hidden");
      document.body.style.overflow = "";
    }

    galleryItems.forEach((item) => {
      item.addEventListener("click", () => {
        const index = parseInt(item.getAttribute("data-item") || "0");
        openModal(index);
      });
    });

    closeModalBtn.addEventListener("click", closeModal);
    modalCloseBtn.addEventListener("click", closeModal);

    modal.addEventListener("click", (e) => {
      if (e.target === modal) {
        closeModal();
      }
    });

    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape" && !modal.classList.contains("hidden")) {
        closeModal();
      }
    });
  });
</script>
