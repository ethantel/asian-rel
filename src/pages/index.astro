---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import SectionHeading from "../components/SectionHeading.astro";
import FeatureCard from "../components/FeatureCard.astro";
import ContentGrid from "../components/ContentGrid.astro";

// Feature cards data
const features = [
  {
    title: "Four Noble Truths",
    description:
      "Understand the core principles that reveal the nature of suffering and the path to its cessation.",
    icon: "four-truths",
    link: "/asian-rel/eightfold-path#truths",
    iconClass: "w-60 h-12", // Add custom size class
  },
  {
    title: "Eightfold Path",
    description:
      "Explore the eight practices that lead to the end of suffering and spiritual enlightenment.",
    icon: "eightfold-path",
    link: "/asian-rel/eightfold-path#path",
  },
  {
    title: "Five Khandas",
    description:
      "Learn about the five aggregates that constitute a sentient being and the concept of non-self.",
    icon: "rituals",
    link: "/asian-rel/liberation",
  },
];

// Journey sections data
const journeySections = [
  {
    title: "History & Origins",
    description:
      "The life of Siddhartha Gautama and the beginnings of Buddhist thought and practice.",
    image: "/asian-rel/images/history.png",
    link: "/asian-rel/history",
  },
  {
    title: "Rituals & Devotion",
    description:
      "Explore the symbolic practices, meditation techniques, and devotional ceremonies.",
    image: "/asian-rel/images/rituals.jpg",
    link: "/asian-rel/rituals",
  },
  {
    title: "The Four Noble Truths",
    description:
      "Understanding the nature of suffering and its root causes in Buddhist philosophy.",
    image: "/asian-rel/images/truths.png",
    link: "/asian-rel/eightfold-path#truths",
  },
  {
    title: "The Eightfold Path",
    description:
      "The structured path of right living and practice leading toward enlightenment.",
    image: "/asian-rel/images/eightfold.png",
    link: "/asian-rel/eightfold-path#path",
  },
  {
    title: "Pathways to Liberation",
    description:
      "The Five Khandas and philosophical concepts of non-self and impermanence.",
    image: "/asian-rel/images/liberation.png",
    link: "/asian-rel/liberation",
  },
  {
    title: "Non-Harm & Ethics",
    description:
      "Explore Ahimsa and ethical principles that guide conduct toward all living beings.",
    image: "/asian-rel/images/ethics.png",
    link: "/asian-rel/non-harm",
  },
];
---

<Layout>
  <Hero
    title="The Pathway to Buddhism"
    subtitle="History • Rituals • Eightfold Path • Four Noble Truths • Liberation • Non-Harm"
    ctaText="Begin Your Journey"
    ctaLink="#overview"
    showCTA={true}
  />

  <!-- Overview Section -->
  <section id="overview" class="section-padding bg-neutral-50">
    <div class="container mx-auto px-4">
      <SectionHeading
        title="Begin Your Journey"
        subtitle="Buddhism is an ancient path of understanding, aiming to find freedom in suffering to achieve nirvana and inner peace."
      />

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
        {
          features.map((feature) => (
            <FeatureCard
              title={feature.title}
              description={feature.description}
              icon={feature.icon}
              link={feature.link}
              iconClass={feature.iconClass}
            />
          ))
        }
      </div>
    </div>
  </section>

  <!-- Sections Grid -->
  <section class="section-padding bg-neutral-100">
    <div class="container mx-auto px-4">
      <SectionHeading
        title="Discover Key Buddhist Concepts"
        subtitle="Explore the fundamental teachings, practices, and philosophical foundations of Buddhism"
      />

      <ContentGrid items={journeySections} />
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-20 bg-primary-600 text-white">
    <div class="container mx-auto px-4 text-center">
      <h2
        class="text-3xl md:text-4xl font-serif mb-6 text-gold-400"
        data-aos="fade-up"
      >
        Ready to Begin Your Journey?
      </h2>
      <p
        class="text-xl mb-8 max-w-3xl mx-auto"
        data-aos="fade-up"
        data-aos-delay="100"
      >
        Explore the rich history, profound philosophy, and practical wisdom of
        Buddhism.
      </p>
      <a
        href="/asian-rel/history"
        class="inline-block bg-white text-primary-700 font-medium px-8 py-3 rounded-md transition-colors hover:bg-neutral-100 text-lg"
        data-aos="fade-up"
        data-aos-delay="200"
      >
        Start Exploring
      </a>
    </div>
  </section>
</Layout>
