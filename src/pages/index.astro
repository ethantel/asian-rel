---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import SectionHeading from '../components/SectionHeading.astro';
import FeatureCard from '../components/FeatureCard.astro';
import ContentGrid from '../components/ContentGrid.astro';

// Feature cards data
const features = [
  {
    title: 'Four Noble Truths',
    description: 'Understand the core principles that reveal the nature of suffering and the path to its cessation.',
    icon: 'four-truths',
    link: '/asian-rel/eightfold-path#truths',
    iconClass: 'w-60 h-12' // Add custom size class
  },
  {
    title: 'Eightfold Path',
    description: 'Explore the eight practices that lead to the end of suffering and spiritual enlightenment.',
    icon: 'eightfold-path',
    link: '/asian-rel/eightfold-path#path'
  },
  {
    title: 'Daily Rituals',
    description: 'Discover the meaningful practices and ceremonies that connect practitioners to Buddhist teachings.',
    icon: 'rituals',
    link: '/asian-rel/rituals'
  }
];

// Journey sections data
const journeySections = [
  {
    title: 'History & Origins',
    description: 'The life of Siddhartha Gautama and the beginnings of Buddhist thought and practice.',
    image: '/asian-rel/images/history.jpg',
    link: '/asian-rel/history'
  },
  {
    title: 'Rituals & Devotion',
    description: 'Explore the symbolic practices, meditation techniques, and devotional ceremonies.',
    image: '/asian-rel/images/rituals.jpg',
    link: '/asian-rel/rituals'
  },
  {
    title: 'Noble Truths & Path',
    description: 'Understanding suffering and the structured path toward liberation and enlightenment.',
    image: '/asian-rel/images/truths.jpg',
    link: '/asian-rel/eightfold-path'
  },
  {
    title: 'Pathways to Liberation',
    description: 'The Five Khandas and philosophical concepts of non-self and impermanence.',
    image: '/asian-rel/images/liberation.jpg',
    link: '/asian-rel/liberation'
  },
  {
    title: 'Non-Harm & Ethics',
    description: 'Explore Ahimsa and ethical principles that guide conduct toward all living beings.',
    image: '/asian-rel/images/ethics.jpg',
    link: '/asian-rel/non-harm'
  },
  {
    title: 'Reflect & Apply',
    description: 'Practical applications of Buddhist teachings for modern daily life and challenges.',
    image: '/asian-rel/images/reflect.jpg',
    link: '/asian-rel/reflect'
  }
];

// Gallery images
const galleryImages = [
  {
    title: 'Borobudur Temple',
    description: 'The world\'s largest Buddhist temple in Indonesia',
    image: '/asian-rel/images/gallery/temple1.jpg',
    link: '#'
  },
  {
    title: 'Buddha Statue',
    description: 'Ancient Buddha image reflecting serenity',
    image: '/asian-rel/images/gallery/statue1.jpg',
    link: '#'
  },
  {
    title: 'Mountain Monastery',
    description: 'Secluded monastery nestled in mountain peaks',
    image: '/asian-rel/images/gallery/monastery1.jpg',
    link: '#'
  },
  {
    title: 'Lotus Flowers',
    description: 'Symbol of purity emerging from muddy waters',
    image: '/asian-rel/images/gallery/lotus.jpg',
    link: '#'
  },
  {
    title: 'Prayer Wheels',
    description: 'Traditional cylinders containing sacred texts',
    image: '/asian-rel/images/gallery/prayer-wheels.jpg',
    link: '#'
  },
  {
    title: 'Meditation Garden',
    description: 'Peaceful space designed for contemplation',
    image: '/asian-rel/images/gallery/garden.jpg',
    link: '#'
  }
];
---

<Layout>
  <Hero 
    title="The Pathway to Buddhism" 
    subtitle="Explore Four Noble Truths • Eightfold Path • Daily Practice" 
    ctaText="Begin Your Journey" 
    ctaLink="#overview"
  />

  <!-- Overview Section -->
  <section id="overview" class="section-padding bg-neutral-50">
    <div class="container mx-auto px-4">
      <SectionHeading
        title="Begin Your Journey"
        subtitle="Buddhism offers profound insights into the nature of existence and provides a structured path toward spiritual liberation and inner peace."
      />
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
        {features.map(feature => (
          <FeatureCard 
            title={feature.title}
            description={feature.description}
            icon={feature.icon}
            link={feature.link}
            iconClass={feature.iconClass}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Pathway Preview Section -->
  <section id="explore" class="section-padding bg-neutral-100">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div data-aos="fade-right">
          <img 
            src="/asian-rel/images/pathway-map.jpg" 
            alt="Buddhist Pathway Map" 
            class="rounded-lg shadow-lg w-full"
          />
        </div>
        <div data-aos="fade-left">
          <h2 class="text-3xl font-serif mb-6">Your Interactive Pathway</h2>
          <p class="text-neutral-700 mb-6">
            The Buddhist path is often visualized as a journey up a mountain or through an unfolding lotus. Our interactive map guides you through the key principles and practices, allowing you to explore each aspect of Buddhist thought in depth.
          </p>
          <p class="text-neutral-700 mb-8">
            From understanding the Four Noble Truths that recognize suffering to following the Eightfold Path toward liberation, each step builds upon the previous, creating a comprehensive approach to spiritual development.
          </p>
          <a 
            href="/asian-rel/eightfold-path" 
            class="inline-block bg-primary-600 hover:bg-primary-700 text-white font-medium px-6 py-3 rounded-md transition-colors"
          >
            Explore the Path
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Sections Grid -->
  <section class="section-padding">
    <div class="container mx-auto px-4">
      <SectionHeading
        title="Discover Key Buddhist Concepts"
        subtitle="Explore the fundamental teachings, practices, and philosophical foundations of Buddhism"
      />
      
      <ContentGrid items={journeySections} />
    </div>
  </section>

  <!-- Gallery Section -->
  <section class="section-padding bg-neutral-100">
    <div class="container mx-auto px-4">
      <SectionHeading
        title="Sacred Sites & Symbols"
        subtitle="Visual journey through beautiful Buddhist temples, symbols, and sacred spaces"
      />
      
      <ContentGrid items={galleryImages} />
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-20 bg-primary-600 text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-serif mb-6 text-gold-400" data-aos="fade-up">Ready to Begin Your Journey?</h2>
      <p class="text-xl mb-8 max-w-3xl mx-auto" data-aos="fade-up" data-aos-delay="100">
        Explore the rich traditions, profound philosophy, and practical wisdom of Buddhism.
      </p>
      <a 
        href="/asian-rel/history" 
        class="inline-block bg-white text-primary-700 font-medium px-8 py-3 rounded-md transition-colors hover:bg-neutral-100 text-lg"
        data-aos="fade-up"
        data-aos-delay="200"
      >
        Start Exploring
      </a>
    </div>
  </section>
</Layout>